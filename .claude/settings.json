{
  "env": {
    "DISABLE_ZOXIDE": "1"
  },
  "includeCoAuthoredBy": false,
  "model": "sonnet",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Awa daw part' | terminal-notifier -sound Blow -title 'Claude Code'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Mana part' | terminal-notifier -sound Blow -title 'Claude Code'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true
  },
  "alwaysThinkingEnabled": true
}
