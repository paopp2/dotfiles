# Necessary to avoid the default title (ðŸ‘»)
title=" "
theme="Iceberg Dark"
shell-integration=zsh
macos-titlebar-proxy-icon=hidden

font-size=20

# Disable font ligatures
font-feature=-calt
font-feature=-liga
font-feature=-dlig

macos-non-native-fullscreen=visible-menu
background-opacity=0.85
background-blur-radius=30
# background=1f1f1f

# After quick terminal size gets feature gets merged, set initial size to full screen
quick-terminal-animation-duration=0
quick-terminal-position=center
quick-terminal-screen=macos-menu-bar
quick-terminal-autohide=false
keybind = global:cmd+enter=toggle_quick_terminal
window-save-state = always
quick-terminal-size = 100%,100%

keybind = cmd+f=toggle_fullscreen
# SIGINT
keybind = cmd+c=text:\x03

keybind = unconsumed:cmd+a=unbind

# cmd+num for tmux tabs
keybind = cmd+digit1=text:\x05\x31
keybind = cmd+digit2=text:\x05\x32
keybind = cmd+digit3=text:\x05\x33
keybind = cmd+digit4=text:\x05\x34
keybind = cmd+digit5=text:\x05\x35

keybind = shift+enter=text:\n

# text:\x16 == Ctrl+V
# context: Claude Code uses Ctrl+V for pasting images so...
keybind = cmd+shift+v=text:\x16
keybind = ctrl+shift+e=text:\x07

bell-features = no-attention
